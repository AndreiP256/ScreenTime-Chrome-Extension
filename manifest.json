{
    "name": "ScreenTime Tracker",
    "version": "1.0.0",
    "description": "This extension will help you to track your screen time",
    "manifest_version": 3,
    "author": "Prusacov Andrei",
    "action": {
        "default_popup": "index.html",
        "default_title": "ScreenTime"
    },
    "permissions": ["storage"],
    "background": {
        "service_worker": "background_script.js"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}